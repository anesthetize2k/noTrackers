<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="noTrackers"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clean URL (tracking parameters removed):"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/urlEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:textSize="14sp"
        android:hint="Enter or paste URL here..."
        android:inputType="textUri"
        android:maxLines="3"
        android:scrollbars="vertical"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/celebrationMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You:1 BigTech: 0\nðŸ•µï¸â€â™‚ï¸ Share content, not your digital footprint."
        android:textSize="14sp"
        android:textColor="#4CAF50"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <CheckBox
        android:id="@+id/spreadWordCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="like the app? spread the word"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/copyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Copy URL"
            android:textColor="#ffffff"
            android:background="#4CAF50"
            android:padding="12dp"
            android:layout_marginEnd="4dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/shareButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Share"
            android:textColor="#ffffff"
            android:background="#2196F3"
            android:padding="12dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/reportButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Report Error"
            android:textColor="#ffffff"
            android:background="#FF9800"
            android:padding="12dp"
            android:layout_marginStart="4dp"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This app removes tracking parameters from URLs to protect your privacy."
        android:textSize="12sp"
        android:textColor="#999999"
        android:gravity="center"
        android:layout_marginTop="24dp" />

</LinearLayout>
