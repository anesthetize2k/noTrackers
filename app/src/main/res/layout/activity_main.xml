<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_matte_silver">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="noTrackers"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/silver_text"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/infoMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/silver_text"
        android:textSize="15sp"
        android:lineSpacingMultiplier="1.3"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/cleanUrlLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clean URL (tracking parameters removed):"
        android:textSize="16sp"
        android:textColor="@color/silver_dim"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/urlEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_dark"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="@color/silver_text"
            android:hint="Enter or paste URL here..."
            android:textColorHint="@color/silver_dim"
            android:inputType="textUri"
            android:maxLines="3"
            android:scrollbars="vertical"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/refreshButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_silver_glow"
            android:src="@drawable/ic_refresh"
            android:contentDescription="Clear URL"
            android:padding="8dp"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/celebrationMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You:1ðŸ’ª BigTech:0ðŸ–•\nðŸ•µï¸â€â™‚ï¸ Share content, not your digital footprint."
        android:textSize="14sp"
        android:textColor="@color/silver_text"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/securePrivacyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Secure my privacy"
        android:textColor="@color/silver_text"
        android:background="@drawable/btn_silver_glow"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/spreadWordCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="like the app? spread the word"
        android:textSize="14sp"
        android:textColor="@color/silver_dim"
        android:buttonTint="@color/accent_cyan"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/copyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="Copy URL"
            android:textColor="@color/silver_text"
            android:background="@drawable/btn_silver_glow"
            android:padding="12dp"
            android:layout_marginEnd="4dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/shareButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="Share"
            android:textColor="@color/silver_text"
            android:background="@drawable/btn_silver_glow"
            android:padding="12dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/reportButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Report Error"
        android:textColor="@color/silver_text"
        android:background="@drawable/btn_silver_glow"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This app removes tracking parameters from URLs to protect your privacy."
        android:textSize="12sp"
        android:textColor="@color/silver_dim"
        android:gravity="center"
        android:layout_marginTop="24dp" />

</LinearLayout>
